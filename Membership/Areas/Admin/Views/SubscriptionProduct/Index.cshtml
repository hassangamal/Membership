@model IEnumerable<global::Membership.Models.SubscriptionProduct>
@using Membership.Areas.Admin.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subscription.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subscription.Title)
            </td>
            @Html.Partial("_TableButtonPartial", new SmallButtonModel { Id = item.SubscriptionProductID })
        </tr>
    }

</table>
