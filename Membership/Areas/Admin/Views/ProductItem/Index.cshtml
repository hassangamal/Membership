@model IEnumerable<global::Membership.Models.ProductItem>
@using Membership.Areas.Admin.Models;
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Item.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Title)
            </td>
            @Html.Partial("_TableButtonPartial", new SmallButtonModel { Id = item.ProductItemID })
        </tr>
    }

</table>
