            @Html.DisplayFor(modelItem => item.HTMLShort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemType.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Part.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Section.Title)
        </td>
            @Html.Partial("_TableButtonPartial", new SmallButtonModel { Id = item.ItemID })
       
    </tr>
}

</table>
