@model IEnumerable<global::Membership.Models.Product>
@using Membership.Areas.Admin.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descriptions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductLinkText.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductType.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductLinkText.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType.Title)
            </td>
            
                @Html.Partial("_TableButtonPartial", new SmallButtonModel { Id = item.ProductID })
            
        </tr>
    }

</table>
